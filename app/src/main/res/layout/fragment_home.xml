                                android:maxLines="4"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp"
                                tools:ignore="MissingPrefix"
                                tools:targetApi="jelly_bean" />
                    </TableRow>

                    <TableRow
                            android:layout_marginTop="10dp"
                            android:gravity="start">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="5"
                                android:maxLines="4"
                                android:text="@string/boot_loader"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                tools:targetApi="jelly_bean" />

                        <TextView
                                android:id="@+id/tv_boot_loader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="4"
                                android:maxLines="4"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp"
                                tools:ignore="MissingPrefix"
                                tools:targetApi="jelly_bean" />
                    </TableRow>

                    <TableRow
                            android:layout_marginTop="10dp"
                            android:gravity="start">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="5"
                                android:maxLines="4"
                                android:text="@string/user"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                tools:targetApi="jelly_bean" />

                        <TextView
                                android:id="@+id/tv_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="4"
                                android:maxLines="4"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp"
                                tools:ignore="MissingPrefix"
                                tools:targetApi="jelly_bean" />
                    </TableRow>

                    <TableRow
                            android:layout_marginTop="10dp"
                            android:gravity="start">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="5"
                                android:maxLines="4"
                                android:text="@string/host"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                tools:targetApi="jelly_bean" />

                        <TextView
                                android:id="@+id/tv_host"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="4"
                                android:maxLines="4"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp"
                                tools:ignore="MissingPrefix"
                                tools:targetApi="jelly_bean" />
                    </TableRow>

                    <TableRow
                            android:id="@+id/tl_security_patch_level_contain"
                            android:layout_marginTop="10dp"
                            android:gravity="start">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="5"
                                android:maxLines="4"
                                android:text="@string/security_patch_level"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                tools:targetApi="jelly_bean" />

                        <TextView
                                android:id="@+id/tv_security_patch_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="4"
                                android:maxLines="4"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp"
                                tools:ignore="MissingPrefix"
                                tools:targetApi="jelly_bean" />
                    </TableRow>

                    <TableRow
                            android:layout_marginTop="10dp"
                            android:gravity="start">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="5"
                                android:maxLines="4"
                                android:text="@string/kernel"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                tools:targetApi="jelly_bean" />

                        <TextView
                                android:id="@+id/tv_kernel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="4"
                                android:maxLines="4"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp"
                                tools:ignore="MissingPrefix"
                                tools:targetApi="jelly_bean" />
                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
