<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/dashboard_background"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="10dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:src="@mipmap/ic_smartphone"
                android:tint="@color/dashboard" />

        <TextView
                android:id="@+id/tv_brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:textColor="@color/darkBlue"
                android:textSize="17sp"
                tools:ignore="MissingPrefix"
                tools:targetApi="jelly_bean" />

        <TextView
                android:id="@+id/tv_model_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"
                android:textColor="@color/dark_violet_one"
                android:textSize="14sp"
                tools:ignore="MissingPrefix"
                tools:targetApi="jelly_bean" />

        <LinearLayout
                android:id="@+id/root_access"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/root_access"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:targetApi="jelly_bean" />

            <TextView
                    android:id="@+id/tv_root_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    tools:ignore="MissingPrefix"
                    tools:targetApi="jelly_bean" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardUseCompatPadding="true">

        <ScrollView
                android:background="@color/bottomsheet_card_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="UselessParent">

                    <TableRow
                            android:layout_marginTop="10dp"
                            android:gravity="start">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="5"
                                android:maxLines="4"
                                android:text="@string/manufacturer"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                tools:targetApi="jelly_bean" />

                        <TextView
                                android:id="@+id/tv_manufacturer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="4"
                                android:maxLines="4"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp"
                                tools:ignore="MissingPrefix"
                                tools:targetApi="jelly_bean" />
                    </TableRow>

                    <TableRow
                            android:layout_marginTop="10dp"
                            android:gravity="start">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="5"
                                android:maxLines="4"
                                android:text="@string/board"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                tools:targetApi="jelly_bean" />

                        <TextView
                                android:id="@+id/tv_board"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="4"
                                android:maxLines="4"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp"
                                tools:ignore="MissingPrefix"
                                tools:targetApi="jelly_bean" />
                    </TableRow>

                    <TableRow
                            android:layout_marginTop="10dp"
                            android:gravity="start">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="5"
                                android:maxLines="4"
                                android:text="@string/architecture"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                tools:targetApi="jelly_bean" />

                        <TextView
                                android:id="@+id/tv_architecture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="4"
                                android:maxLines="4"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp"
                                tools:ignore="MissingPrefix"
                                tools:targetApi="jelly_bean" />
                    </TableRow>

                    <TableRow
                            android:layout_marginTop="10dp"
                            android:gravity="start">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxEms="5"
                                android:maxLines="4"
                                android:text="@string/build_date"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                tools:targetApi="jelly_bean" />

                        <TextView
