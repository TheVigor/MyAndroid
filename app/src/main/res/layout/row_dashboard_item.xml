<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/cv_dashboard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="6dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="6dp"
                                    app:cardCornerRadius="4dp"
                                    app:cardElevation="0.9dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_fragment_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                android:contentDescription="@null"
                android:src="@mipmap/ic_processor"
                tools:targetApi="lollipop" />

        <TextView
                android:id="@+id/tv_fragment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_fragment_icon"
                android:layout_marginBottom="4dp"
                android:maxLines="2"
                android:contentDescription="@null"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="12sp" />

        <ImageView
                android:id="@+id/iv_fragment_temp"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:contentDescription="@null"
                android:layout_below="@id/tv_fragment_name" />
    </RelativeLayout>


</android.support.v7.widget.CardView>