<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dashboard_background"
                android:clipToPadding="false"
                android:orientation="vertical"
                tools:context=".MainActivity"
                tools:ignore="NamespaceTypo">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    <RelativeLayout
            android:id="@+id/rl_battery_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:paddingEnd="10dp"
            tools:ignore="RtlSymmetry">

        <TextView
                android:id="@+id/tvBattryMahValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center|start"
                android:paddingStart="10dp"
                android:textColor="@color/secondary_text"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

        <ImageView
                android:id="@+id/iv_battery_charging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/pb_battery_fragment"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:src="@mipmap/ic_battery"
                android:tint="@color/battery" />

        <ProgressBar
                android:id="@+id/pb_battery_fragment"
                style="@style/MyProgressBarTwoForBatteryFragment"
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:indeterminateOnly="false"
                android:max="100"
                android:min="0"
                tools:targetApi="o" />

        <ImageView
                android:id="@+id/iv_battery"
                android:layout_width="8dp"
                android:layout_height="9dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/custom_battery_attach_view_for_battery_fragment"
                android:contentDescription="@null"
                android:tint="@color/battery" />
    </RelativeLayout>

    <TextView
            android:id="@+id/tv_battery_fragment_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/rl_battery_fragment"
            android:layout_marginEnd="10dp"
            android:paddingEnd="10dp"
            android:text="0%"
            android:textColor="@color/network"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingPrefix,RtlSymmetry" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_battery_fragment_percentage"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/card_view_bg"
                app:cardUseCompatPadding="true">

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                <include layout="@layout/battery_sub_view" />
            </ScrollView>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>